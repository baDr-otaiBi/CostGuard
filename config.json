{
  "system": {
    "name": "CostGuard AI - نظام التحليل المالي الذكي",
    "version": "3.0",
    "language": "ar",
    "encoding": "utf-8-sig"
  },
  "ai_features": {
    "enabled": true,
    "models": {
      "forecasting": {
        "enabled": true,
        "days_to_predict": 30,
        "model_type": "RandomForest",
        "n_estimators": 100
      },
      "segmentation": {
        "enabled": true,
        "n_clusters": 3,
        "algorithm": "KMeans"
      },
      "anomaly_detection": {
        "enabled": true,
        "contamination": 0.1,
        "algorithm": "IsolationForest"
      },
      "price_optimization": {
        "enabled": true,
        "min_margin_threshold": 10,
        "high_margin_threshold": 50
      }
    }
  },
  "data_generation": {
    "n_orders": 3000,
    "start_date": "2023-01-01",
    "end_date": "2024-01-01",
    "special_events": {
      "ramadan_multiplier": 2.5,
      "blackfriday_multiplier": 4.0,
      "backtoschool_multiplier": 1.8
    }
  },
  "visualization": {
    "dpi": 300,
    "figure_size": [12, 8],
    "color_scheme": "professional",
    "save_format": "png"
  },
  "export": {
    "csv_enabled": true,
    "json_enabled": true,
    "pdf_enabled": false,
    "excel_enabled": false
  },
  "logging": {
    "enabled": true,
    "level": "INFO",
    "file": "costguard_ai.log"
  }
}
